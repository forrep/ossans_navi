{
    "name": "ossans_navi",
    "dockerComposeFile": "compose.yaml",
    "service": "app",
    "workspaceFolder": "/home/ossans_navi/app",
    "shutdownAction": "stopCompose",

    "customizations": {
        "vscode": {
            "settings": {
                "python.testing.unittestEnabled": false,
                "python.testing.pytestEnabled": true,
                "editor.unicodeHighlight.allowedLocales": {
                    "ja": true
                },
                "autopep8.args": [
                    "--max-line-length",
                    "150"
                ],
                "[python]": {
                    "editor.defaultFormatter": "ms-python.autopep8"
                },
                "flake8.args": [
                    "--config=.flake8"
                ],
                "files.associations": {
                    "**/.devcontainer/devcontainer.env": "properties"
                }
            },
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "ms-python.mypy-type-checker",
                "ms-python.autopep8",
                "ms-python.flake8",
                "ms-python.isort",
                "tamasfe.even-better-toml",
                "ms-azuretools.vscode-docker"
            ]
        }
    }

}
